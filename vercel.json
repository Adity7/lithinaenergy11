{
  "version": 2,
  "builds": [
    {
      "src": "bms_project/wsgi.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "cd frontend/app && chmod +x vercel-build.sh && ./vercel-build.sh"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "bms_project/wsgi.py"
    },
    {
      "src": "/admin/(.*)",
      "dest": "bms_project/wsgi.py"
    },
    {
      "src": "/oauth/(.*)",
      "dest": "bms_project/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/app/dist/$1"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "bms_project.settings"
  }
} 