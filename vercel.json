{
  "version": 2,
  "builds": [
    {
      "src": "bms_project/manage.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "frontend/app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "bms_project/manage.py"
    },
    {
      "src": "/admin/(.*)",
      "dest": "bms_project/manage.py"
    },
    {
      "src": "/oauth/(.*)",
      "dest": "bms_project/manage.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "frontend/app/dist/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/app/dist/index.html"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "bms_project.settings"
  }
}
